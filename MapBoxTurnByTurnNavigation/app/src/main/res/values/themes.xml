<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. --><!--Theme.MaterialComponents.DayNight.DarkActionBar-->
    <style name="Theme.MapBoxTurnByTurnNavigation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.Avatar" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>


    <style name="MapboxStylePrimaryManeuver">
        <item name="android:textColor">@color/mapbox_primary_maneuver_text_color</item>
        <item name="android:textSize">22sp</item><!--30-->
        <item name="android:includeFontPadding">false</item>
        <item name="android:textDirection">locale</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MapboxStyleSecondaryManeuver">
        <item name="android:textColor">@color/mapbox_secondary_maneuver_text_color</item>
        <item name="android:textSize">18sp</item><!--24sp-->
        <item name="android:includeFontPadding">false</item>
        <item name="android:textDirection">locale</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MapboxStyleSubManeuver">
        <item name="android:textColor">@color/mapbox_sub_maneuver_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textDirection">locale</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MapboxStyleStepDistance">
        <item name="android:textColor">@color/mapbox_step_distance_text_color</item>
        <item name="android:textSize">16sp</item><!--22sp-->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MapboxStyleTurnIconManeuver">
        <item name="maneuverTurnIconColor">@color/mapbox_turn_icon_color</item>
        <item name="maneuverTurnIconShadowColor">@color/mapbox_turn_icon_shadow_color</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="MapboxStyleManeuverView">
        <item name="maneuverViewBackgroundColor">@color/primary_color</item>
        <item name="subManeuverViewBackgroundColor">@color/yellow</item>
        <item name="upcomingManeuverViewBackgroundColor">
            @color/mapbox_upcoming_maneuver_background_color
        </item>
        <item name="maneuverViewIconStyle">@style/MapboxStyleTurnIconManeuver</item>
        <item name="laneGuidanceManeuverIconStyle">@style/MapboxStyleTurnIconManeuver</item>
    </style>
</resources>